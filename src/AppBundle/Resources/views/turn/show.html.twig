{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h1>Turn {{ turn.number }} of {{ turn.game }} game</h1>

    <table>
        <tbody>
            {% if turn.result %}
            <tr>
                <th>Results of previous turn</th>
                <td>{{ turn.result|raw }}</td>
            </tr>
            {% endif %}
            {% if turn.idea %}
            <tr>
                <th>New ideas</th>
                <td>{{ turn.idea|raw }}</td>
            </tr>
            {% endif %}
            {% if turn.plan %}
            <tr>
                <th>Plan for game on current stage</th>
                <td>{{ turn.plan|raw }}</td>
            </tr>
            {% endif %}
            {% if turn.action %}
            <tr>
                <th>Actions of this turn</th>
                <td>{{ turn.action|raw }}</td>
            </tr>
            {% endif %}
            <tr>
                <th>Privacy</th>
                <td>{% if turn.privacy == 0 %}None{% else %}Link{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_show', { 'id': turn.game.id }) }}">Back to game</a>
        </li>
        <li>
            <a href="{{ path('turn_edit', { 'id': turn.id }) }}">Edit turn</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete turn" onclick="return confirm('Do you really want to delete turn?');">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
