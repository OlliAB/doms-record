<style>
    thead {
        color: green;
    }

    tbody {
        color: blue;
    }

    tfoot {
        color: red;
    }

    table, th, td {
        border: 1px solid black;
        text-align: center;
        min-width: 150px;
    }

    .myTableStyle {
        /*margin-left: 300px;*/
        width: 100%;
    }
</style>

<div style="text-align: center">
    <div># List of my games #</div>
    <div style="text-align: center">
        <table class="myTableStyle">
            <thead>
            <tr>
                <td>Era</td>
                <td>Nation</td>
                <td>Map</td>
                <td>Actions</td>
            </tr>
            </thead>
            <tbody>
            {% for game in app.user.games %}
            <tr>
                <td>{{ game.nation.age }}</td>
                <td>{{ game.nation.name }}</td>
                <td>{{ game.map }}</td>
                <td>
                    <a href="">Add turn</a>
                    &nbsp;
                    <a href="{{ url('game_show', {'id': game.id}) }}">View</a>
                    &nbsp;
                    <a href="{{ url('game_edit', {'id': game.id}) }}">Edit</a>
                    &nbsp;
                    <a href="{{ url('game_delete', {'id': game.id}) }}" onclick="return confirm('Do you really want to delete game?');">Delete</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div><a href="{{ url('game_new') }}"><button>Add new game</button></a></div>
