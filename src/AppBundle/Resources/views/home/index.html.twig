{% extends 'AppBundle::base.html.twig' %}

{% block body %}
<div id="wrapper">
    <div id="container">
        <div id="welcome">
            <h1 style="text-align: center"><span>Home page</h1>
        </div>

        {% if app.user %}
        {% include 'AppBundle:home:_nations.html.twig' %}
        {% else %}
        <div style="display:block; margin-top: 0px; text-align: center;">
            <strong>Nations list:</strong>
        </div>

        <div style="display:block; margin-top: 0px; text-align: center;">
            {% set old = 'old' %}
            {% for nation in nations %}

            {% if nation.age != old %}
            <br/><br/>{{ nation.age }} Age:<br/><br/>
            {% set old = nation.age %}
            {% endif %}

            {{ nation.name }}

            {% endfor %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
